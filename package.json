{
  "name": "claude-codex",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "build": "bun build src/main.ts --outdir dist --target bun",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "setup": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "lefthook": "^1.11.13",
    "typedoc": "^0.28.5",
    "vitest": "^3.2.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
